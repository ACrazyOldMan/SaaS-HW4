-#  This file is app/views/movies/index.html.haml
%h1=@msg

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th Director
      %th More Info
  %tbody
    - if @movies!=nil 
      - @movies.each do |movie|  
        %tr
          %td= movie.title 
          %td= movie.rating
          %td= movie.release_date
          %td=movie.director
          %td= link_to "More about #{movie.title}", movie_path(movie)
      

= link_to 'Back to Index', movies_path
